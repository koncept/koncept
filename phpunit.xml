<?xml version="1.0" encoding="utf-8" ?>
<phpunit colors="true" bootstrap="vendor/autoload.php"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false">
    <testsuites>
        <testsuite name="All Tests">
            <directory>./tests/</directory>
            <directory>./modules/http/tests/</directory>
            <directory>./modules/collection/tests/</directory>
            <directory>./modules/property/tests/</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory>./src/</directory>
            <directory>./modules/http/src/</directory>
            <directory>./modules/collection/src/</directory>
            <directory>./modules/property/src/</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-clover" target="clover.xml"/>
    </logging>
</phpunit>